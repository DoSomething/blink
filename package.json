{
  "name": "blink",
  "version": "1.0.0-alpha",
  "description": "The DoSomething.org Message Bus.",
  "engines": {
    "node": "7.9.0"
  },
  "scripts": {
    "test": "NODE_ENV=test ava",
    "lint": "eslint .",
    "coverage": "NODE_ENV=test nyc --all ava",
    "all-tests": "npm run lint && npm run coverage",
    "html-coverage-report": "nyc report --reporter=html",
    "publish-coverage-report": "nyc report --reporter=lcov && codecov",
    "web": "node start.js web",
    "worker": "node start.js worker"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DoSomething/blink.git"
  },
  "author": "Sergii Tkachenko <sergii@dosomething.org> (https://github.com/sergii-tkachenko)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DoSomething/blink/issues"
  },
  "homepage": "https://github.com/DoSomething/blink#readme",
  "dependencies": {
    "amqp-uri": "^2.0.0",
    "amqplib": "^0.5.1",
    "change-case": "^3.0.1",
    "isomorphic-fetch": "^2.2.1",
    "joi": "^10.4.1",
    "koa": "^2.2.0",
    "koa-basic-auth": "^2.0.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.1.1",
    "newrelic": "^1.38.2",
    "throng": "^4.0.0",
    "uuid": "^3.0.1",
    "winston": "^2.3.1",
    "yargs": "^7.1.0"
  },
  "devDependencies": {
    "@dosomething/eslint-config": "^2.0.0",
    "ava": "^0.19.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "codecov": "^2.1.0",
    "eslint": "^3.19.0",
    "eslint-plugin-ava": "^4.2.0",
    "nyc": "^10.2.0",
    "supertest": "^3.0.0"
  },
  "ava": {
    "concurrency": 5,
    "powerAssert": false,
    "failWithoutAssertions": false
  },
  "nyc": {
    "exclude": [
      "config",
      "coverage",
      "test"
    ]
  }
}
