    "express": "^4.15.2",
    "nyc": "^10.1.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@dosomething/eslint-config": "^2.0.0",
    "ava": "^0.18.2",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "eslint": "^3.17.1",
